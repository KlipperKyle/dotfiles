#!/bin/bash
#
# .env
# Source from .bash_profile
#

if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

export EDITOR=/usr/bin/vim
export GTK_OVERLAY_SCROLLING=0
export LS_OPTIONS=${LS_OPTIONS:-"-F -b -T 0 --color=auto"}

# Get a GUI terminal
for terminal in konsole mate-terminal xfce4-terminal gnome-terminal urxvt rxvt xterm ; do
    if type $terminal > /dev/null 2>&1; then
        export TERMINAL=$terminal
        break
    fi
done

# Get a GUI editor
for editor in gvim pluma mousepad gedit ; do
    if type $editor > /dev/null 2>&1; then
        export VISUAL=$editor
        break
    fi
done
[ x"$VISUAL" = x"gvim" ] && export VISUAL="gvim -f"

# Allow local overrides
if [ -d "$HOME/.env.d" ] ; then
    for file in "$HOME/.env.d/"* ; do
        [ -r "$file" ] && . "$file"
    done
fi
